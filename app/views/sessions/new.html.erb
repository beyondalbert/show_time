<%= form_tag(sessions_path, class: "form-signin") do %>
  <%= render_flash_messages %>
  <h2 class="form-signin-heading">登 录</h2>
  <%= text_field_tag(:phone, params[:phone],  class: "form-control", placeholder: "手机号") %>
  <%= password_field_tag(:password, '',  class: "form-control", placeholder: "密码") %>
  <%= check_box_tag(:remember_me, 1, params[:remember_me]) %> 记住登录状态
  <%= submit_tag "登 录", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
