<div id="myCarousel" class="carousel slide myCarousel-margin" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1" class=""></li>
    <li data-target="#myCarousel" data-slide-to="2" class=""></li>
  </ol>
  <div class="carousel-inner">
    <% @pictures.each.with_index do |p, index| %>
      <div class="item <%= index == 0 ? 'active' : ''%>">
        <%= image_tag p.content.url, style: "margin: 0 auto;" %>
        <div class="container visible-lg-block">
          <div class="carousel-caption">
            <h1><%= p.title %></h1>
            <p><%= p.description %></p>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div><!-- /.carousel -->

<% if @function_module_first.is_display %>
  <div class="floor">
    <div class="floor-head">
      <h2><%= @function_module_first.name %></h2>
    </div>
    <div class="row commercial-app">
      <% unless @business_cover.empty? %>
        <% Picture.business_cover.each do |p| %>
          <div class="col-sm-6">
            <%= image_tag p.content.url, class: "img-responsive center-block" %>
            <p class="content"><%= p.title %></p>
          </div>
        <% end -%>
      <% else %>
        <div class="col-sm-6">
          <%= image_tag "app_default_01.jpg", class: "img-responsive center-block" %>
          <p class="content">无人机桥梁检测</p>
        </div>
        <div class="col-sm-6">
          <%= image_tag "app_default_02.jpg", class: "img-responsive center-block" %>
          <p class="content">警务执法</p>
        </div>
        <div class="col-sm-6">
          <%= image_tag "app_default_03.jpg", class: "img-responsive center-block" %>
          <p class="content">测绘/3D建模</p>
        </div>
        <div class="col-sm-6">
          <%= image_tag "app_default_04.jpg", class: "img-responsive center-block" %>
          <p class="content">航拍</p>
        </div>
      <% end -%>
    </div>
  </div>
<% end %>

<% if @function_module_second.is_display %>
  <div class="floor">
    <div class="floor-head">
      <h2><%= @function_module_second.name %></h2>
      <a data-no-turbolink='true' href="/videos/index">查看更多视频 &gt;</a>
    </div>
    <div class="row text-center">
      <% @videos.each do |v| %>
        <div class="col-md-4">
          <div class="video-box">
            <%= image_tag v.cover.url, 'data-src' => v.url, class: "img-responsive center-block video-pic" %>
            <span><%= v.title %></span>
          </div>
        </div>
      <% end -%>
    </div>
  </div>
<% end %>

<% if @function_module_third.is_display %>
<div class="floor-bottom">
  <div class="floor-head" style="text-align: left;margin-bottom: 10px;">
    <h2><%= @function_module_third.name %></h2>
    <a data-no-turbolink='true' href="/activities">查看更多活动 &gt;</a>
  </div>
  <% if @last_activity %>
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-8">
            <%= image_tag @last_activity.picture.url(:medium), class: "img-responsive center-block" %>
          </div>
          <div class="col-md-4 last-activity-head">
            <div class="visible-lg-block">
              <p><%= @last_activity.happen_time.year %></p>
              <p style="font-size: 40px;color: #000;margin-bottom: 20px; "><%= @last_activity.happen_time.strftime("%m | %d") %></p>
              <p><%= link_to truncate(@last_activity.title, length: 6), activity_path(@last_activity.id)%></p>
            </div>
            <div class="hidden-lg" style="text-align: center;">
              <p><%= link_to truncate(@last_activity.title, length: 6), activity_path(@last_activity.id)%></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <ul class="activities-list visible-lg-block" style="padding-left: 0px;">
          <% @activities.each do |a| %>
            <li><%= link_to a.happen_time.strftime("%F") + " | " + a.title, activity_path(a.id) %></li>
          <%- end %>
        </ul>
        <ul class="activities-list hidden-lg" style="padding-left: 0px;">
          <% @activities.each do |a| %>
            <li><%= link_to truncate(a.happen_time.strftime("%F") + " | " + a.title, length: 25), activity_path(a.id) %></li>
          <%- end %>
        </ul>
      </div>
    </div>
  <%- end %>
</div>
<% end %>

<div id="video-show" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <iframe id="video-content" width="100%" height="200px" src="" frameborder=0 'allowfullscreen'></iframe>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
$('.video-pic').click(function() {
  $('#video-show').modal();
  $('#video-show .modal-header h4').text($(this).next().text());
  $('#video-content').attr('src', $(this).attr('data-src'));
    });
$('#video-show').on('hidden.bs.modal', function(e) {
  $('#video-content').attr('src', '');
})
</script>
