<h1 class="page-header">编辑招聘岗位</h1>
<%= form_tag(admin_job_path(@job.id), method: :put, class: "form-horizontal") do -%>
	<div class="form-group">
    <label class="col-sm-2 control-label">岗位名称：</label>
    <div class="col-sm-8">
      <%= text_field_tag 'job[title]', @job.title, placeholder: '标题', class: "form-control" %>
    </div>
  </div>
	<div class="form-group">
    <label class="col-sm-2 control-label">岗位要求：</label>
    <div class="col-sm-8">
      <%= text_area_tag 'job[desc]', @job.desc, placeholder: '岗位要求，每条要求换行并使用分号隔开', class: "form-control", rows: 10 %>
    </div>
  </div>
	<div class="form-group">
    <label class="col-sm-2 control-label">岗位状态：</label>
    <div class="col-sm-3">
      <%= select_tag 'job[status]', options_for_select([['正在招聘', 1], ['过期', 0]], @job.status), class: 'form-control'%>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= submit_tag '保存', class: "btn btn-default" %>
    </div>
  </div>
<% end -%>
