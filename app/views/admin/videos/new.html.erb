<h1 class="page-header">新建精彩视频</h1>
<%= form_tag(admin_videos_path, method: :post, multipart: true, class: "form-horizontal") do -%>
	<div class="form-group">
    <label class="col-sm-2 control-label">标题：</label>
    <div class="col-sm-8">
      <%= text_field_tag 'video[title]', '', placeholder: '标题', class: "form-control" %>
    </div>
  </div>
	<div class="form-group">
    <label class="col-sm-2 control-label">视频链接：</label>
    <div class="col-sm-8">
      <%= text_field_tag 'video[url]', '', placeholder: '优酷视频链接', class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">视频封面图片：</label>
    <div class="col-sm-8">
      <%= file_field_tag "video[cover]", class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= submit_tag 'Save', class: "btn btn-default" %>
    </div>
  </div>
<% end -%>
