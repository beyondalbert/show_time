<% activities.each do |a| %>
	<tr>
    <td><%= a.id %></td>
    <td><%= link_to a.title, admin_activity_path(a.id) %></td>
    <td><%= image_tag a.picture.url(:medium) %></td>
    <td>
    	<%= link_to(admin_activity_path(a.id), method: :delete) do %>
      	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    	<% end %>
    	<%= link_to(edit_admin_activity_path(a.id), 'data-no-turbolink' => true ) do %>
      	<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
    	<% end %>
    </td>
  </tr>
<%- end %>
