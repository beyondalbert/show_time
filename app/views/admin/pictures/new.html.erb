<h1 class="page-header">轮播图设置</h1>
<%= form_tag(admin_pictures_path, method: :post, multipart: true, class: "form-horizontal") do -%>
	<div class="form-group">
    <label class="col-sm-2 control-label">标题：</label>
    <div class="col-sm-8">
      <%= text_field_tag 'picture[title]', '', placeholder: '标题', class: "form-control" %>
    </div>
  </div>
	<div class="form-group">
    <label class="col-sm-2 control-label">描述：</label>
    <div class="col-sm-8">
      <%= text_field_tag 'picture[description]', '', placeholder: '图片的简短描述', class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">图片内容：</label>
    <div class="col-sm-8">
      <%= file_field_tag "picture[content]", class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= submit_tag 'Save', class: "btn btn-default" %>
    </div>
  </div>
<% end -%>
