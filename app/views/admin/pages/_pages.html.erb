<% pages.each do |p| %>
	<tr>
    <td><%= p.id %></td>
    <td><%= p.title %></td>
    <td><%= p.parent_id ? p.parent.title : "" %></td>
    <td>
    	<%= link_to(admin_page_path(p.id), method: :delete) do %>
      	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    	<% end %>
    	<%= link_to(edit_admin_page_path(p.id), 'data-no-turbolink' => true ) do %>
      	<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
    	<% end %>
    </td>
  </tr>
<%- end %>
