<h1 class="page-header">编辑自定义页面</h1>
<%= form_tag(admin_page_path(@page.id), method: :put, multipart: true, class: "form-horizontal") do -%>
	<div class="form-group">
    <label class="col-sm-2 control-label">标题：</label>
    <div class="col-sm-8">
      <%= text_field_tag 'page[title]', @page.title, placeholder: '标题', class: "form-control" %>
    </div>
  </div>
	<div class="form-group">
    <label class="col-sm-2 control-label">父页面：</label>
    <div class="col-sm-3">
      <% if @page.parent_id %>
        <%= select_tag 'page[parent_id]', options_from_collection_for_select(@parent_pages, 'id', 'title', @page.parent_id), include_blank: true, class: 'form-control'%>
      <% else %>
        <%= select_tag 'page[parent_id]', options_from_collection_for_select(@parent_pages, 'id', 'title'), include_blank: true, class: 'form-control'%>
      <% end -%>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">页面内容：</label>
    <div class="col-sm-8">
      <%= cktext_area :page, :desc, cols: 40, row: 80, ckeditor: { uiColor: '#cccccc', toolbar: 'mini', language: 'zh-cn', height: '60vh' } %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= submit_tag '保存', class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
